<h2 class="text-2xl font-semibold text-[#364650]"><%= t('devise.screen_title.login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'grow'} ) do |f| %>
  <div class="form-field my-6">
    <i class="fa-solid fa-envelope"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'app-input text-[#071e2996] focus:text-[#335263]' %>
  </div>

  <div class="form-field">
    <i class="fa-solid fa-lock"></i>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'app-input text-[#071e2996]' %>
  </div>

  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'block w-full flex justify-end text-[#0b2d3da3] text-sm hover:text-[#0b2d3d70]' %>

  <%= f.submit "Log in", class: 'p-2 w-full mt-10 rounded text-lg font-semibold text-[#364650] bg-[#ffffff42] border border-[#dedede61]' %>
<% end %>

<div class="flex gap-4">
  <p class="text-[#071e2996] text-base"><%= t('devise.messages.do_not_have_account') %></p>
  <%= link_to t('devise.links.create_account'), new_registration_path(resource_name), class: 'text-[#364650] underline hover:text-[#0b2d3da3]' %>
</div>


