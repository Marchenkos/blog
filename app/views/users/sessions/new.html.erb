<h2 class="text-center text-2xl font-semibold">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field flex-row-reverse">
    <i class="fa-regular fa-circle-user"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <i class="fa-solid fa-lock"></i>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'block w-full flex justify-end text-[#6a6a6a] text-sm hover:text-[#565454]' %>


  <div class="actions">
    <%= f.submit "Log in", class: 'bg-white p-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
