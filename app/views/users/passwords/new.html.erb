<%= link_to :back, class: 'mb-3' do %>
  <i class="fa-solid fa-arrow-left"></i>
  <%= t('devise.links.back') %>
<% end %>

<h2 class="text-2xl font-semibold text-[#364650]"><%= t('devise.screen_title.forgot_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'grow' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field mt-12">
    <i class="fa-solid fa-envelope"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>


  <%= f.submit "Send me reset password instructions", class: 'p-2 w-full mt-4 rounded text-lg font-semibold text-[#364650] bg-[#ffffff42] border border-[#dedede61]' %>

<% end %>
